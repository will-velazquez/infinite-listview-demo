<Page
    x:Class="App1.Pages.AvailabilityTest"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:app1="using:App1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <app1:AvailabilityGrid x:Name="PART_AvailabilityGrid" Grid.Row="0" />

        <Grid Grid.Row="1" ColumnSpacing="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Vertical">
                <TextBlock Text="Start Time: " />
                <Slider Minimum="0" Maximum="24" StepFrequency="0.05" Value="{x:Bind StartTime, Mode=TwoWay}" />
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Vertical">
                <TextBlock Text="End Time: " />
                <Slider Minimum="0" Maximum="24" StepFrequency="0.05" Value="{x:Bind EndTime, Mode=TwoWay}" />
            </StackPanel>
        </Grid>
        <ColorPicker Grid.Row="2" Color="{x:Bind PART_AvailabilityGrid.EventColor, Mode=TwoWay}" />
    </Grid>
</Page>
